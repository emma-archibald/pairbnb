<div align= "center">

<%= link_to 'Book', new_listing_reservation_path(@listing), class: "btn btn-primary" %>
<%= link_to 'View Bookings', listing_reservations_path(@listing), class: "btn btn-primary" %>

  <hr>

  <p>
    <strong>Address:</strong>
    <%= @listing.address %>
  </p>


  <p>
    <strong>Nighly Rate:</strong>
    <%= "$" + @listing.nightly_rate.to_s %>
  </p>

  <p>
    <strong>Bedrooms:</strong>
    <%= @listing.no_bedrooms %>
  </p>

  <p>
    <strong>Bathrooms:</strong>
    <%= @listing.no_bathrooms %>
  </p>

  <p>
    <strong>Owner:</strong>
    <%= @listing.user.email %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @listing.description %>
  </p>

  <p>
    <strong>Amenities:</strong>
    <% @listing.amenities.each do |i| %>
    <%= i.icon %>
    <% end %>

  </p>
  <% if @listing.avatars? %>
  <%= image_tag (@listing.avatars[0].large.url) %>
  <% end %>
  <hr>

  <%= link_to 'Back to Listings', listings_path, class: "btn btn-primary" %>

</div>
